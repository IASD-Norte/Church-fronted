# Configuración de pnpm para Church Frontend

# Hoisting: false para un manejo más estricto de dependencias
shamefully-hoist=false

# Permitir instalar peers automáticamente
auto-install-peers=true

# No fallar si hay conflictos de peer dependencies (útil para desarrollo)
strict-peer-dependencies=false

# Usar lockfile congelado en CI
# prefer-frozen-lockfile=true

# Nivel de log
loglevel=info

# Almacenar carpeta node_modules en el mismo nivel (comportamiento clásico)
node-linker=hoisted

# Caché y optimización
store-dir=~/.pnpm-store
